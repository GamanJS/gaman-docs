---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
import { features, plugins } from "../utils/content";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GamanJS - Backend Framework</title>
    <link rel="shortcut icon" href="/img/gaman-big.png" type="image/png" />
  </head>
  <body class="bg-stone-950 text-pink-100 overflow-x-hidden">
    <Navbar />

    <main>
      <!-- START: Hero Content -->
      <div class="h-screen flex items-center justify-center px-6 relative">
        <!-- Background Glow -->
        <div
          class="absolute -top-10 -left-10 w-72 h-72 bg-pink-500 rounded-full opacity-20 blur-3xl animate-pulse"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-80 h-80 bg-purple-500 rounded-full opacity-20 blur-3xl animate-pulse"
          style="animation-delay: 2s;"
        >
        </div>

        <div
          class="container grid grid-cols-1 md:grid-cols-2 gap-10 items-center relative z-10"
        >
          <!-- Text -->
          <div class="text-center md:text-left">
            <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight">
              Build <span
                class="from-pink-400 to-purple-400 bg-gradient-to-r bg-clip-text text-transparent"
                >Sweet Backends</span
              > Fast
            </h1>
            <p class="description mb-8">
              GamanJS is a modern backend framework built for resilience,
              scalability, simplicity adn blazing performance for your backend
              apps.
            </p>
            <div
              class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start items-center"
            >
              <a
                href="/en/overview/first-steps"
                class="bg-gradient-to-r from-pink-500 to-purple-500 px-6 py-3 rounded-full font-semibold text-white hover:shadow-xl hover:shadow-pink-500/50 transition-transform transform hover:scale-110"
              >
                Get Started
              </a>
              <a
                href="/docs"
                class="border-2 border-pink-400 px-6 py-3 rounded-full font-semibold text-pink-200 hover:border-purple-400 hover:bg-pink-500/10 transition-all duration-300"
              >
                View Docs
              </a>
            </div>
          </div>

          <!-- Image -->
          <div class="hidden md:flex justify-center">
            <img
              src="/img/gaman.png"
              alt="GamanJS"
              class="max-w-md md:max-w-lg drop-shadow-[0_0_30px_rgba(236,72,153,0.5)]"
            />
          </div>
        </div>
      </div>
      <!-- END: Hero Content -->

      <!-- START: Key Features -->
      <section class="relative">
        <div class="container relative z-10">
          <h2 class="section-title max-w-2xl mx-auto text-center">
            Why <span
              class="from-pink-400 to-purple-400 bg-gradient-to-r bg-clip-text text-transparent"
              >Developers</span
            >
            Choose <span
              class="from-purple-400 to-pink-400 bg-gradient-to-r bg-clip-text text-transparent"
              >GamanJS</span
            >
          </h2>

          <p class="section-subtitle text-center max-w-lg mx-auto mt-6">
            {features.description}
          </p>

          <!-- START: List Features -->
          <div
            class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mt-10"
          >
            {
              features.items.map((item) => {
                const Icon = item.icon;

                return (
                  <div class="card gap-4">
                    <Icon class=" text-purple-400" />
                    <div>
                      <h3 class="text-xl md:text-2xl font-semibold mb-4">
                        {item.title}
                      </h3>
                      <p>{item.text}</p>
                    </div>
                  </div>
                );
              })
            }
          </div>
          <!-- END: List Features -->
        </div>

        <!-- background glow -->
        <div
          class="absolute bottom-0 left-0 w-80 h-72 bg-gradient-to-br from-purple-500 to-pink-500 opacity-20 blur-3xl animate-pulse"
        >
        </div>
        <!-- <div
        class="absolute -bottom-20 right-0 w-[25rem] h-[28rem] bg-pink-500 opacity-20 animate-pulse blur-3xl"
        style="animation-delay: 2s;"
      > -->
      </section>
      <!-- END: Key Features -->

      <!-- START: Plugins -->
      <section class="relative">
        <div class="container relative z-10">
          <h2 class="section-title text-center max-w-2xl mx-auto">
            Extend <span
              class="from-pink-400 to-purple-400 bg-gradient-to-r bg-clip-text text-transparent"
              >GamanJS</span
            >
            without touching <span
              class="from-purple-400 to-pink-400 bg-gradient-to-r bg-clip-text text-transparent"
              >the core</span
            >
          </h2>

          <p class="section-subtitle text-center max-w-lg mx-auto mt-6">
            {plugins.description}
          </p>

          <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6 mt-10">
            {
              plugins.items.map((item) => {
                const Icon = item.icon;

                return (
                  <div class="group relative p-4 md:p-6 rounded-2xl bg-gradient-to-br from-pink-500/5 to-purple-500/5 border border-white/5 hover:border-pink-500/20 transition-all duration-500 hover:shadow-lg hover:shadow-pink-500/10 overflow-hidden">


                    <div class="absolute inset-0 bg-gradient-to-br from-pink-500/20 to-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-3xl transform scale-150 group-hover:scale-100"></div>
                    
                    <div class="relative group/icon w-full flex flex-col items-center md:flex-row md:items-center md:gap-6 mb-5">
                      <div class="flex items-center justify-center w-16 h-16 md:w-14 md:h-14 rounded-xl bg-gradient-to-br from-pink-400/40 to-purple-400/30 md:shrink-0 mx-auto md:mx-0 group-hover:scale-110 transition-all duration-500 group-hover:shadow-lg group-hover:shadow-pink-500/20">
                        <Icon class="w-8 h-8 md:w-6 md:h-6 text-purple-300 group-hover:text-pink-300 transition-colors duration-300" />
                      </div>

                      <!-- Mobile: show title under icon (visible on small screens) -->
                      <div class="mt-3 text-center md:mt-0 md:text-left w-full">
                        <div class="text-sm md:text-base font-semibold text-white/90">{item.title}</div>
                      </div>

                      <div class="mobile-popup md:hidden fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[calc(100vw-2rem)] max-w-[340px] opacity-0 scale-95 transition-all duration-300 z-[9999] pointer-events-none">

                            <div class="bg-gradient-to-br from-pink-500/30 to-purple-500/30 p-6 rounded-xl shadow-[0_8px_32px_rgba(0,0,0,0.3)] border border-white/20 backdrop-blur-2xl">
                          
                              <div class="flex items-center gap-4 mb-4">
                                <div class="p-3 bg-gradient-to-br from-pink-400/30 to-purple-400/30 backdrop-blur-md rounded-lg">
                                  <Icon class="text-white w-7 h-7" />
                            </div>

                                <div class="text-white text-lg font-semibold tracking-wide">{item.title}</div>
                            <button class="ml-auto text-white/60 hover:text-white p-1" onclick="event.stopPropagation(); this.closest('.mobile-popup').classList.remove('active'); document.body.style.overflow = ''">
                              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                              </svg>
                            </button>
                          </div>
                              <div class="text-white/95 text-lg leading-relaxed tracking-wide">
                            {item.text}
                          </div>
                        </div>
                      </div>
                    </div>

                    {/* Bagian mobil phone */}
                    <div class="hidden md:block relative mt-0 md:mt-0 transition-all duration-500 group-hover:translate-y-[-4px]">
                      <p class="text-gray-400 group-hover:text-pink-100 transition-colors duration-500 md:pl-0">
                        {item.text}
                      </p>
                    </div>

                    <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-pink-500/10 to-purple-500/10 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="absolute bottom-0 left-0 w-16 h-16 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  </div>
                );
              })
            }
          </div>
          <!-- END: List Features -->
        </div>

        <!-- background glow -->
        <div
          class="absolute bottom-0 right-0 w-80 h-72 bg-gradient-to-br from-purple-500 to-pink-500 opacity-20 blur-3xl animate-pulse"
        >
        </div>
        <!-- <div
        class="absolute -bottom-20 right-0 w-[25rem] h-[28rem] bg-pink-500 opacity-20 animate-pulse blur-3xl"
        style="animation-delay: 2s;"
      > -->
      </section>
      <!-- END: Plugins -->
    </main>
  </body>

  <Footer />

  <!-- boleh di pindah ini buat matiin popup nya -->
  <style>
    .mobile-popup.active {
      opacity: 1 !important;
      transform: translateY(-50%) translateX(0) !important;
      pointer-events: auto !important;
    }
  </style>

  <script>

    // mobile popup nya ehe :3
    document.addEventListener('click', function (e) {
      if (window.matchMedia && window.matchMedia('(min-width: 768px)').matches) return

      const target = e.target instanceof Element ? e.target : null
      if (!target) return

      const iconWrap = target.closest('.group')
      if (!iconWrap) return
      const popup = iconWrap.querySelector('.mobile-popup')
      if (!popup) return

      if (target.closest('.mobile-popup')) return

      const isActive = popup.classList.toggle('active')

      //! tutup popup
      document.querySelectorAll('.mobile-popup.active').forEach(p => {
        if (p !== popup) p.classList.remove('active')
      })

      if (isActive) document.body.style.overflow = 'hidden'
      else document.body.style.overflow = ''
    })

    // tutup klik di mana saja
    document.addEventListener('touchstart', function (e) {
      if (window.matchMedia && window.matchMedia('(min-width: 768px)').matches) return
      const t = e.target instanceof Element ? e.target : null
      if (t && (t.closest('.mobile-popup') || t.closest('.group'))) return
      document.querySelectorAll('.mobile-popup.active').forEach(p => p.classList.remove('active'))
      document.body.style.overflow = ''
    })
  </script>
</html>
